<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplicationMusic" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#000000</item>
        <!-- Customize your theme here. -->
        <item name="alertDialogTheme">@style/CustomDialogTheme</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Fondo del diálogo -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Color del título -->
        <item name="android:textColorPrimary">@color/red</item>
        <!-- Color de los items de la lista -->
        <item name="android:textColorAlertDialogListItem">@android:color/black</item>
        <!-- Color del cuerpo del mensaje -->
        <item name="android:textColorSecondary">@android:color/black</item>
        <!-- Color de los botones -->
        <item name="colorAccent">@color/red</item>
    </style>
</resources>